{
  "version": 2,
  "buildCommand": "bash ./vercel-deploy.sh",
  "builds": [
    {
      "src": "server/vercel-server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "shared/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/vercel-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/vercel-server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "TS_NODE_COMPILER_OPTIONS": "{\"skipLibCheck\":true}"
  }
}